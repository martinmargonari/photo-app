<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Picture</th>
    <th scope="col">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @images.each do |image| %>
    <tr>
      <td><%= link_to image.name, image %></td>
      <td><%= image_tag(image.picture.url, size: "100x100") %></td>
      <td>
        <%= link_to 'Edit', edit_image_path(image), class: "btn btn-sm btn-outline-info" %>
        <%= link_to 'Delete', image, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-sm btn-outline-danger" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_image_path %>
